// General nextflow config.
// PLEASE MANUALLY DEFINE THESE.
nextflow.enable.dsl=2
nextflow.enable.moduleBinaries = true
cleanup = "true" 

// Container and executor params
// PLEASE MANUALLY DEFINE THESE.
process.executor = "slurm"
process.container = ""

singularity {
    enabled = true
    autoMounts = true
    runOptions = "--bind bindpath"
    cacheDir = ""
}

params {
    // Reference and filtering params.
    maf = 0.01 
    missing = 0.5
    geno = 0.05 
    mind = 0.05 
    hwe = 1e-6
    kingTableFilter = 0.04419417382
    populationOutlierThreshold = 1
    refPath = ''
    refPop = ''
    refAFs = ''
    beagle_map = ''

    // General Params
    // THESE ARE REPLACED BY WRAPPER.
    // NO TOUCHIES >:(
    inputDir = "/scratch/hb-functionalgenomics/projects/public-rna/data/whole-blood/SRP092402/genotypes"
    outDir = "/scratch/hb-functionalgenomics/projects/public-rna/data/whole-blood/SRP092402/QC"
    cohortName = ""
}

